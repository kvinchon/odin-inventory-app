extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name: 
      input#name.form-control(type='text' placeholder='Name (spirits)' name='name' maxLength='100' required value=(category === undefined ? '' : category.name))
    div.form-group 
      label(for='description') Description: 
      input#description.form-control(type='text' placeholder='Description' name='description' maxLength='100' required value=(category === undefined ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit 
  
  if errors 
    ul 
      each error in errors 
        li= error.msg